<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_us_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView_about_us"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/uberuns_act"
        >
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" >

            <TextView
                android:id="@+id/about_us_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:shadowColor="@color/title_color"
                android:text="@string/uber_uns_text"
                android:textColor="#246878"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>
 <!-- 
    <TextView
        android:id="@+id/about_us_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scrollView1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:textColor="#246878"
        android:text="@string/uber_uns"
        android:textAppearance="?android:attr/textAppearanceMedium" />   -->

	<LinearLayout
	    android:id="@+id/uberuns_act"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:gravity="center_vertical|center_horizontal" >

    <ImageView
        android:id="@+id/uber_uns_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/uber_uns"
        android:scaleType="fitStart"
        android:src="@drawable/uberuns_act" />

    </LinearLayout>

</RelativeLayout>